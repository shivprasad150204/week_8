BoxLayout:
    orientation: 'vertical'
    spacing: 10
    padding: 20

    Label:
        text: "Enter your name:"
        font_size: 24

    TextInput:
        id: input_name
        hint_text: "Your name"

    Button:
        text: "Greet"
        on_press: app.handle_greet()

    Button:
        text: "Clear"
        on_press: app.handle_clear()

    Label:
        id: output_label
        text: ""
        font_size: 32
